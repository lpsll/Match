<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.macth.match.register.activity.ForgetPwdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_301"
        android:layout_marginLeft="@dimen/ds_80"
        android:layout_marginRight="@dimen/ds_80"
        android:layout_marginTop="@dimen/ds_250"
        android:background="@drawable/forget_pwd_ll"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_150">

            <EditText
                android:inputType="number"
                android:id="@+id/et_forget_pwd_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ds_40"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColor="@color/navi"
                android:textColorHint="@color/tv_hintdc3"
                android:textSize="@dimen/fs_55" />



            <com.macth.match.register.view.TimeButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/TimeButton_forget_pwd"
                android:layout_width="@dimen/ds_310"
                android:layout_height="@dimen/ds_85"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:button="@null"
                android:text="获取验证码"
                android:textColor="@color/navi"
                android:textSize="@dimen/fs_42" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/ds_80"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ds_10"
                android:layout_toLeftOf="@id/TimeButton_forget_pwd"
                android:background="@color/tv_grey" />



        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_40"
            android:layout_marginRight="@dimen/ds_40"
            android:layout_toLeftOf="@id/TimeButton_forget_pwd"
            android:background="@color/tv_grey" />


        <EditText
            android:inputType="number"
            android:id="@+id/et_forget_pwd_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:textColor="@color/navi"
            android:textColorHint="@color/tv_hintdc3"
            android:textSize="@dimen/fs_55" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_forget_pwd_next"
        style="@style/button_click1"
        android:layout_marginTop="@dimen/ds_150"
        android:text="下一步" />

</LinearLayout>
