<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_cc"
    android:orientation="vertical">
    <com.macth.match.common.widget.SearchView
        android:id="@+id/et"
        style="@style/StyleEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_100"
        android:background="@drawable/sousou"
        android:layout_marginRight="@dimen/ds_40"
        android:layout_marginTop="@dimen/ds_20"
        android:layout_marginLeft="@dimen/ds_40"
        android:layout_marginBottom="@dimen/ds_40"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" >
    </ListView>


    <TextView
        android:id="@+id/dialog"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_gravity="center"
        android:background="@drawable/show_head_toast_bg"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="30.0dip"
        android:visibility="invisible" />

    <com.macth.match.common.widget.SideBar
        android:id="@+id/sidebar"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>
