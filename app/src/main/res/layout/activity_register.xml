<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_register_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_140"
        android:layout_marginLeft="@dimen/ds_80"
        android:layout_marginRight="@dimen/ds_80"
        android:layout_marginTop="@dimen/ds_150"
        android:background="@drawable/login_border">

        <CheckBox
            android:clickable="false"
            android:id="@+id/cb_register_username_img"
            android:layout_width="@dimen/ds_140"
            android:layout_height="match_parent"
            android:background="@drawable/denglu"
            android:button="@null"
            android:checked="false" />

        <EditText
            android:textCursorDrawable="@drawable/color_cursor"
            android:inputType="number"
            android:paddingRight="@dimen/ds_100"
            android:id="@+id/et_register_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:layout_marginLeft="@dimen/ds_180"
            android:textColor="@color/navi"
            android:textColorHint="@color/tv_hintdc3"
            android:textSize="@dimen/fs_55" />



        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/TimeButton_register"
            android:layout_width="@dimen/ds_320"
            android:layout_height="@dimen/ds_85"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:button="@null"
            android:text="获取验证码"
            android:textColor="@color/navi"
            android:textSize="@dimen/fs_42" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/ds_80"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ds_10"
            android:layout_toLeftOf="@id/TimeButton_register"
            android:background="@color/tv_hint" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_register_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_140"
        android:layout_marginLeft="@dimen/ds_80"
        android:layout_marginRight="@dimen/ds_80"
        android:layout_marginTop="@dimen/ds_30"
        android:background="@drawable/login_border"
        android:orientation="horizontal">

        <CheckBox
            android:clickable="false"
            android:id="@+id/cb_register_code_img"
            android:layout_width="@dimen/ds_140"
            android:layout_height="match_parent"
            android:background="@drawable/register_shouji"
            android:button="@null"
            android:checked="false" />

        <EditText
            android:textCursorDrawable="@drawable/color_cursor"
            android:inputType="number"
            android:id="@+id/et_register_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:paddingLeft="@dimen/ds_40"
            android:textColor="@color/navi"
            android:textColorHint="@color/tv_hintdc3"
            android:textSize="@dimen/fs_55" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_register_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_140"
        android:layout_marginLeft="@dimen/ds_80"
        android:layout_marginRight="@dimen/ds_80"
        android:layout_marginTop="@dimen/ds_30"
        android:background="@drawable/login_border"
        android:orientation="horizontal">

        <CheckBox
            android:clickable="false"
            android:id="@+id/cb_register_pwd_img"
            android:layout_width="@dimen/ds_140"
            android:layout_height="match_parent"
            android:background="@drawable/denglu_pwd"
            android:button="@null"
            android:checked="false" />

        <EditText
            android:textCursorDrawable="@drawable/color_cursor"
            android:inputType="textPassword"
            android:id="@+id/et_register_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请设置密码"
            android:paddingLeft="@dimen/ds_40"
            android:textColor="@color/navi"
            android:textColorHint="@color/tv_hintdc3"
            android:textSize="@dimen/fs_55" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_register_pwd_again"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_140"
        android:layout_marginLeft="@dimen/ds_80"
        android:layout_marginRight="@dimen/ds_80"
        android:layout_marginTop="@dimen/ds_30"
        android:background="@drawable/login_border"
        android:orientation="horizontal">

        <CheckBox
            android:clickable="false"
            android:id="@+id/cb_register_pwd_again_img"
            android:layout_width="@dimen/ds_140"
            android:layout_height="match_parent"
            android:background="@drawable/register_password_again"
            android:button="@null"
            android:checked="false" />

        <EditText
            android:textCursorDrawable="@drawable/color_cursor"
            android:inputType="textPassword"
            android:id="@+id/et_register_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请确认密码"
            android:paddingLeft="@dimen/ds_40"
            android:textColor="@color/navi"
            android:textColorHint="@color/tv_hintdc3"
            android:textSize="@dimen/fs_55" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds_80"
        android:layout_marginRight="@dimen/ds_80"
        android:layout_marginTop="@dimen/ds_50"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_550"
            android:text="已有账号？"
            android:textColor="@color/color_f9"
            android:textSize="@dimen/fs_45" />

        <TextView
            android:id="@+id/tv_register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_20"
            android:text="登录"
            android:textColor="@color/navi"
            android:textSize="@dimen/fs_45" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_register_ok"
        style="@style/button_click1"
        android:layout_marginTop="@dimen/ds_120"
        android:text="注册" />

</LinearLayout>
