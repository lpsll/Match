<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ll_find_search1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds_90"
                android:layout_marginBottom="@dimen/ds_30"
                android:layout_marginLeft="@dimen/ds_40"
                android:layout_marginRight="@dimen/ds_240"
                android:layout_marginTop="@dimen/ds_30"
                android:background="@drawable/find_tv_shape"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_find_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:src="@drawable/sousuoxdpi_03" />

                <EditText
                    android:id="@+id/et_find_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds_20"
                    android:background="@null"
                    android:hint="搜索"
                    android:textColor="@color/tv_grey"
                    android:textSize="@dimen/fs_45" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ds_20"
                android:gravity="center"
                android:text="点击搜索"
                android:textColor="@color/navi"
                android:textSize="@dimen/fs_50" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/ds_20"
            android:id="@+id/base_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.macth.match.common.widget.EmptyLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>

