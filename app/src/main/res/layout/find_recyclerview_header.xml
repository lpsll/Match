<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_find_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds_90"
    android:layout_marginLeft="@dimen/ds_40"
    android:layout_marginRight="@dimen/ds_40"
    android:layout_marginTop="@dimen/ds_30"
    android:layout_marginBottom="@dimen/ds_30"
    android:background="@drawable/find_tv_shape"
    android:gravity="center"
    android:visibility="gone">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/ds_20"
        android:src="@drawable/sousuoxdpi_03" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="搜索"
        android:textColor="@color/tv_grey"
        android:textSize="@dimen/fs_45" />

</LinearLayout>
