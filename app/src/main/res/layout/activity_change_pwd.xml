<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_451"
        android:layout_marginLeft="@dimen/ds_80"
        android:layout_marginRight="@dimen/ds_80"
        android:layout_marginTop="@dimen/ds_200"
        android:background="@drawable/forget_pwd_ll"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_changepwd_rawpwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_150"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:textColor="@color/navi"
            android:textColorHint="@color/tv_hintdc3"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/fs_55" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_40"
            android:layout_marginRight="@dimen/ds_40"
            android:background="@color/tv_grey" />


        <EditText
            android:id="@+id/et_changepwd_newpwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_150"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColor="@color/navi"
            android:textColorHint="@color/tv_hintdc3"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/fs_55" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds_40"
            android:layout_marginRight="@dimen/ds_40"
            android:background="@color/tv_grey" />


        <EditText
            android:id="@+id/et_changepwd_newpwd_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds_40"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请确认新密码"
            android:inputType="textPassword"
            android:textColor="@color/navi"
            android:textColorHint="@color/tv_hintdc3"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/fs_55" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_set_new_pwd_ok"
        style="@style/button_click1"
        android:layout_marginTop="@dimen/ds_150"
        android:text="确定" />

</LinearLayout>
