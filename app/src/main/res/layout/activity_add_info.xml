<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_350">

            <ImageView
                android:id="@+id/img_user_card"
                android:layout_width="@dimen/ds_270"
                android:layout_height="@dimen/ds_270"
                android:layout_gravity="center"
                android:src="@drawable/touxiang_zhuce" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_add_info_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_140"
            android:layout_marginLeft="@dimen/ds_80"
            android:layout_marginRight="@dimen/ds_80"
            android:layout_marginTop="@dimen/ds_30"
            android:background="@drawable/login_border"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_add_info_username"
                android:layout_width="@dimen/ds_140"
                android:layout_height="match_parent"
                android:background="@drawable/denglu"
                android:button="@null"
                android:checked="false"
                android:clickable="false" />

            <EditText
                android:id="@+id/et_add_info_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您的姓名"
                android:paddingLeft="@dimen/ds_40"
                android:textColor="@color/navi"
                android:textColorHint="@color/tv_hintdc3"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/fs_55" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/ll_add_info_shenfen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_140"
            android:layout_marginLeft="@dimen/ds_80"
            android:layout_marginRight="@dimen/ds_80"
            android:layout_marginTop="@dimen/ds_30"
            android:background="@drawable/login_border"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_add_info_shenfen"
                android:layout_width="@dimen/ds_140"
                android:layout_height="match_parent"
                android:background="@drawable/add_info_shenfen"
                android:button="@null"
                android:checked="false"
                android:clickable="false" />

            <EditText
                android:id="@+id/et_add_info_shenfen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="请选择身份"
                android:paddingLeft="@dimen/ds_40"
                android:textColor="@color/navi"
                android:textColorHint="@color/tv_hintdc3"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/fs_55" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_info_company"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_140"
            android:layout_marginLeft="@dimen/ds_80"
            android:layout_marginRight="@dimen/ds_80"
            android:layout_marginTop="@dimen/ds_30"
            android:background="@drawable/login_border"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_add_info_company"
                android:layout_width="@dimen/ds_140"
                android:layout_height="match_parent"
                android:background="@drawable/add_info_company"
                android:button="@null"
                android:checked="false"
                android:clickable="false" />

            <EditText
                android:id="@+id/et_add_info_company"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入公司名称"
                android:maxLines="2"
                android:paddingLeft="@dimen/ds_40"
                android:textColor="@color/navi"
                android:textColorHint="@color/tv_hintdc3"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/fs_55" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_info_work"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_140"
            android:layout_marginLeft="@dimen/ds_80"
            android:layout_marginRight="@dimen/ds_80"
            android:layout_marginTop="@dimen/ds_30"
            android:background="@drawable/login_border"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_add_info_work"
                android:layout_width="@dimen/ds_140"
                android:layout_height="match_parent"
                android:background="@drawable/add_info_work"
                android:button="@null"
                android:checked="false"
                android:clickable="false" />

            <EditText
                android:id="@+id/et_add_info_work"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入公司职务"
                android:maxLines="2"
                android:paddingLeft="@dimen/ds_40"
                android:textColor="@color/navi"
                android:textColorHint="@color/tv_hintdc3"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/fs_55" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_add_info_role"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds_140"
            android:layout_marginLeft="@dimen/ds_80"
            android:layout_marginRight="@dimen/ds_80"
            android:layout_marginTop="@dimen/ds_30"
            android:background="@drawable/login_border"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_add_info_role"
                android:layout_width="@dimen/ds_140"
                android:layout_height="match_parent"
                android:background="@drawable/add_info_xietong"
                android:button="@null"
                android:checked="false"
                android:clickable="false" />

            <EditText
                android:id="@+id/et_add_info_role"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="请选择协同角色"
                android:paddingLeft="@dimen/ds_40"
                android:textColor="@color/navi"
                android:textColorHint="@color/tv_hintdc3"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/fs_55" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_add_info_ok"
            style="@style/button_click1"
            android:layout_marginBottom="@dimen/ds_60"
            android:layout_marginTop="@dimen/ds_120"
            android:text="提交" />

    </LinearLayout>
</ScrollView>