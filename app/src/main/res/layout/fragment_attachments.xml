<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_100"
        android:layout_marginTop="@dimen/ds_60"
        android:layout_marginLeft="@dimen/ds_40"
        android:layout_marginRight="@dimen/ds_40"
        android:background="@color/color_11"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/project_name"
            android:gravity="center"
            android:textSize="@dimen/fs_45"
            android:textColor="@color/color_ff"/>
        <View
            android:layout_width="@dimen/ds_2"
            android:layout_height="match_parent"
            android:background="@color/color_cc"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/look_details"
            android:textSize="@dimen/fs_45"
            android:textColor="@color/color_ff"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/attachments_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:descendantFocusability="afterDescendants"
        >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
