<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginLeft="@dimen/ds_40"
        android:layout_marginRight="@dimen/ds_40"
        android:background="@color/color_cc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_126"
        android:layout_marginLeft="@dimen/ds_40"
        android:layout_marginRight="@dimen/ds_40"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/ds_3"
            android:layout_height="match_parent"
            android:background="@color/color_cc"/>
        <TextView
            android:id="@+id/md_tv1_01"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/color_01"
            android:textSize="@dimen/fs_45"/>
        <View
            android:layout_width="@dimen/ds_3"
            android:layout_height="match_parent"
            android:background="@color/color_cc"/>
        <TextView
            android:id="@+id/md_tv1_02"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:textColor="@color/navi"
            android:textSize="@dimen/fs_45"/>
        <View
            android:layout_width="@dimen/ds_3"
            android:layout_height="match_parent"
            android:background="@color/color_cc"/>

        <TextView
            android:id="@+id/md_tv1_03"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/look"
            android:gravity="center"
            android:textColor="@color/navi"
            android:textSize="@dimen/fs_45"/>

        <View
            android:layout_width="@dimen/ds_3"
            android:layout_height="match_parent"
            android:background="@color/color_cc"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_3"
        android:layout_marginLeft="@dimen/ds_40"
        android:layout_marginRight="@dimen/ds_40"
        android:background="@color/color_cc"/>
</LinearLayout>
