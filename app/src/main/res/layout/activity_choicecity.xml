<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_cc"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_300"
        android:layout_marginLeft="@dimen/ds_30"
        android:layout_marginRight="@dimen/ds_30"
        android:background="@drawable/pop"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/ds_30"
            android:layout_marginLeft="@dimen/ds_25"
            android:text="@string/choise_city"
            android:textSize="@dimen/fs_55"
            android:textColor="@color/color_00"  />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_1"
        android:layout_marginTop="@dimen/ds_30"
        android:background="@color/color_cc"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:orientation="horizontal" >

        <com.macth.match.wheel.widget.WheelView
            android:id="@+id/id_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.macth.match.wheel.widget.WheelView>

        <com.macth.match.wheel.widget.WheelView
            android:id="@+id/id_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.macth.match.wheel.widget.WheelView>

        <com.macth.match.wheel.widget.WheelView
            android:id="@+id/id_district"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.macth.match.wheel.widget.WheelView>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds_1"
    android:background="@color/color_cc"/>
    <TextView
        android:id="@+id/btn_confirm"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ds_30"
        android:gravity="center"
        android:text="@string/pop_ok"
        android:textSize="@dimen/fs_55"
        android:textColor="@color/color_00" />
    </LinearLayout>
</LinearLayout>
