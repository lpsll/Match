<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 这个TextView就是显示字母的 -->
    <TextView
        android:id="@+id/tv_lv_item_tag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_50"
        android:background="@color/color_99"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:text="Z"
        android:textSize="@dimen/fs_36"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_162" >


        <ImageView
            android:id="@+id/iv_lv_item_head"
            android:layout_width="@dimen/ds_108"
            android:layout_height="@dimen/ds_108"
            android:src="@drawable/faxianhxdpi_03"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp" />
        <TextView
            android:id="@+id/tv_lv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_lv_item_head"
            android:layout_marginLeft="@dimen/ds_30"
            android:textSize="@dimen/fs_50"
            android:textColor="@color/color_33"
            android:text="周华健"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_lv_item_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/color_cc"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="20dip"
        />
</LinearLayout>
