<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_40"
        android:background="@color/linear_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="@dimen/ds_25">

        <ImageView
            android:id="@+id/img_mine_project"
            android:layout_width="@dimen/ds_400"
            android:layout_height="@dimen/ds_300"
            android:layout_centerVertical="true"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/tv_mine_project_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_430"
            android:text="北京aa有限公司"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/fs_45" />

        <TextView
            android:id="@+id/tv_mine_project_project_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_mine_project_company_name"
            android:layout_marginRight="@dimen/ds_15"
            android:layout_marginTop="@dimen/ds_20"
            android:text="进行中"
            android:textColor="@color/btn_blue"
            android:textSize="@dimen/fs_45" />

        <LinearLayout
            android:id="@+id/ll_mine_project_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mine_project_company_name"
            android:layout_marginLeft="@dimen/ds_430"
            android:layout_marginTop="@dimen/ds_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额："
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />

            <TextView
                android:id="@+id/tv_mine_project_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10万元"
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_mine_project_sum"
            android:layout_marginLeft="@dimen/ds_430"
            android:layout_marginTop="@dimen/ds_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期限："
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />

            <TextView
                android:id="@+id/tv_mine_project_project_termunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1年"
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_project_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_deadline"
            android:layout_marginLeft="@dimen/ds_430"
            android:layout_marginTop="@dimen/ds_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目类型："
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />

            <TextView
                android:id="@+id/tv_mine_project_project_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司债"
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_project_type"
            android:layout_marginLeft="@dimen/ds_430"
            android:layout_marginTop="@dimen/ds_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mine_project_ctime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-09-09"
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />
        </LinearLayout>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_project_type"
            android:id="@+id/tv_mine_projects_update_milestone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_projects_update_milestone"
            android:paddingBottom="@dimen/ds_13"
            android:paddingLeft="@dimen/ds_20"
            android:paddingRight="@dimen/ds_20"
            android:paddingTop="@dimen/ds_13"
            android:text="更新里程碑"
            android:textColor="#ffffff"
            android:textSize="@dimen/fs_40" />
    </RelativeLayout>


</LinearLayout>