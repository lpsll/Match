<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds_40"
        android:background="@color/linear_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="@dimen/ds_25">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/img_mine_project"
            android:layout_width="@dimen/ds_400"
            android:layout_height="@dimen/ds_300"
            android:layout_gravity="center_vertical"
            android:background="#ffffff" />
        <LinearLayout
            android:layout_width="@dimen/ds_400"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_40"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mine_project_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京aa有限公司"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/fs_45" />



        <LinearLayout
            android:id="@+id/ll_mine_project_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额："
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />

            <TextView
                android:id="@+id/tv_mine_project_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10万元"
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期限："
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />

            <TextView
                android:id="@+id/tv_mine_project_project_termunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1年"
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />
        </LinearLayout>



            <TextView
                android:id="@+id/tv_mine_project_project_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_20"
                android:text="公司债"
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />



            <TextView
                android:id="@+id/tv_mine_project_ctime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds_20"
                android:text="2016-09-09"
                android:textColor="@color/tv_grey"
                android:textSize="@dimen/fs_45" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds_40"
            android:orientation="vertical">
        <TextView
            android:id="@+id/tv_mine_project_project_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进行中"
            android:gravity="center"
            android:textColor="@color/btn_blue"
            android:textSize="@dimen/fs_45" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ds_30"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_mine_projects_modify"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="@dimen/ds_80"
            android:layout_marginLeft="@dimen/ds_40"
            android:gravity="center"
            android:background="@drawable/mine_projects_update_milestone"
            android:text="@string/modify"
            android:textColor="#ffffff"
            android:textSize="@dimen/fs_45" />
        <TextView
            android:id="@+id/tv_mine_projects_close"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="@dimen/ds_80"
            android:layout_marginLeft="@dimen/ds_40"
            android:gravity="center"
            android:background="@drawable/mine_projects_update_milestone"
            android:text="@string/close"
            android:textColor="#ffffff"
            android:textSize="@dimen/fs_45" />

        <TextView
            android:id="@+id/tv_mine_projects_update"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="@dimen/ds_80"
            android:layout_marginLeft="@dimen/ds_40"
            android:layout_marginRight="@dimen/ds_40"
            android:gravity="center"
            android:background="@drawable/mine_projects_update_milestone"
            android:text="@string/updata"
            android:textColor="#ffffff"
            android:textSize="@dimen/fs_45" />


    </LinearLayout>


</LinearLayout>