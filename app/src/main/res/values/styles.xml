    </style>

    <style name="StyleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sousou</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableStart">@drawable/sousuoxdpi_03</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/color_99</item>
        <item name="android:textSize">@dimen/fs_45</item>
        <item name="android:textColor">@color/color_99</item>
        <item name="android:hint">搜索</item>
    </style>

    <style name="TransparentAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">bottom</item>
    </style>


    <!--<item name="?android:attr/borderlessButtonStyle"/>-->



</resources>
